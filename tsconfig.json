{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@Env": ["src/environments/environment.ts"],
      "@Store": ["src/app/store/index.ts"],
      "@Actions/*": ["src/app/store/actions/*"],
      "@Reducers/*": ["src/app/store/reducers/*"],
      "@Selectors/*": ["src/app/store/selectors/*"],
      "@Effects/*": ["src/app/store/effects/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "types": ["node", "jest", "mocha"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
